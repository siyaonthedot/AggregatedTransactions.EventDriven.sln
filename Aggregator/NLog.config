<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.log">

  <!-- Define log targets -->
  <targets>
    <!-- Console output (for Docker logs) -->
    <target xsi:type="Console" name="console" layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}" />

    <!-- Rolling file -->
    <target xsi:type="File" name="file" fileName="logs/aggregator.log"
            archiveFileName="logs/archives/aggregator.{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="7"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception}" />
  </targets>

  <!-- Rules for mapping loggers to targets -->
  <rules>
    <logger name="*" minlevel="Info" writeTo="console,file" />
  </rules>
</nlog>
